{
    "compilerOptions": {
        "outDir": "dist",
        "baseUrl": ".",
        "sourceMap": true,
        "target": "esnext",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "./*.js",
        "src/**/*.ts",
        "test/**/*.ts",
        "./api/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
